<h1>Listing calendars</h1>

<table>
  <tr>
    <th>Day</th>
    <th>Business</th>
    <th>Yearly</th>
    <th>Note</th>
  </tr>

<% @calendars.each do |calendar| %>
  <tr>
    <td><%=h calendar.day %></td>
    <td><%=h calendar.business %></td>
    <td><%=h calendar.yearly %></td>
    <td><%=h calendar.note %></td>
    <td><%= link_to 'Show', calendar %></td>
    <td><%= link_to 'Edit', edit_calendar_path(calendar) %></td>
    <td><%= link_to 'Destroy', calendar, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

